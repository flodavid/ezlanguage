arrayDecl:
  varDecl ARRAY LEFT_BRACKET { $$ = $1; }
;

array_declaration:
  scope arrayDecl NUM_INTEGER DOUBLE_DOT NUM_INTEGER RIGHT_BRACKET OF type { printf("array declaration with lower and upper bound \n"); }
| scope arrayDecl NUM_INTEGER DOUBLE_DOT NAME RIGHT_BRACKET OF type { printf("array declaration with lower and upper bound \n"); }
| scope arrayDecl NAME DOUBLE_DOT NUM_INTEGER RIGHT_BRACKET OF type { printf("array declaration with lower and upper bound\n"); }
| scope arrayDecl NUM_INTEGER RIGHT_BRACKET OF type { printf("array declaration with size \n"); }
| scope arrayDecl NAME RIGHT_BRACKET OF type { printf("array declaration with size \n"); }
