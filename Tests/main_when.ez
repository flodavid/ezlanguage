program TestWhen

procedure TestWhen
    variable x is integer
    x = 10

    when  x is
        case 0
            print "Ouch !"
        end case
        case 10  
            print "Vous avez juste la moyenne."
        end case
        case 20  
            print "Parfait !"
        end case
        default
            print "Il faut davantage travailler."
        end case
    end when
end procedure

